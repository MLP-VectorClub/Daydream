{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@mlp-vectorclub/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "modules/*": [
        "src/scss/modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "types"
    ],
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
